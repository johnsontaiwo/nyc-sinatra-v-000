<form action='/figures/new' method='POST'>

<label>Figure:</label>
Name:<input type="text" name='figure[name]' id='figure_name'></input>
<br>

<h1>Create a new title</h1>
<label>Title:</label>
<input type='text' name='title[name]' id='new_title'><br>

<h1>Or choose from existing titles:</h1>>
  <label>Title:</label>

<% Title.all.each do |t| %>
  <input type='checkbox' id='title_<%=t.id%>' name='figure[title_ids][]' value='<%=t.id%>'<%=t.name%>>
<% end %><br>

<h1>Create a new Landmark</h1>>
<label>Landmark:</label>
<input type='text' name='landmark[name]' id='new_landmark'><br>

<h1>Or choose from existing landmarks</h1>

<label>Landmark:</label>
<% Landmark.all.each do |l| %>
<input type="checkbox" id='landmark_<%=l.id%>' name='figure[landmark_ids][]' value='<%=l.id%>'<%=l.name%>>
<% end %><br>
<input type='submit' value='Create New Figure'>

</form>